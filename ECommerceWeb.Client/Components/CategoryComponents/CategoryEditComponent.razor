
<PageTitle>@pageTitleParam</PageTitle>
<h3 class="text-uppercase mb-2 mt-1">@pageTitleParam</h3>

<EditForm Model="categoryDtoRequest" OnValidSubmit="@onBtnSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row">
        <div class="col-auto">
            <div class="mb-3">
                <label for="Category" class="form-label">Name</label>

                <InputText class="form-control" id="NameID" placeholder="Name" @bind-Value="categoryDtoRequest.Name" />
                @* <ValidationMessage For="@( ()=> categoryDtoRequest.Name )" /> *@
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-auto">
            <div class="mb-3">
                <label for="Description" class="form-label">Description</label>
                <InputText type="text" class="form-control" id="DecriptionID" placeholder="Desc Category" @bind-Value="categoryDtoRequest.Description" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-auto">
            <div class="mb-3">
                <button type="submit" class="btn btn-outline-primary"><i class="bi bi-floppy me-1"></i>@nameBtnFormSubmit</button>
            </div>
        </div>
        <div class="col-auto"
           <NavLink class="btn btn-outline-secondary" href="Category/list"><i class="bi bi-backspace me-1"></i> Return</NavLink>
        </div>
    </div>

</EditForm>

@code {

    [Parameter]
    public CategoryDtoRequest categoryDtoRequest { get; set; } = new();
    [Parameter]
    public string pageTitleParam { get; set; } = "title loading...";
    [Parameter]
    public string nameBtnFormSubmit { get; set; } = "name loading...";
    [Parameter]
    public EventCallback onBtnSubmit { get; set; }


}
